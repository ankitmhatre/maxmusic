<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="colorAccent">@color/app_color_accent</item>
    </style>



    <style name="About.TextView.LibraryName" parent="Base.TextAppearance.AppCompat">
        <item name="android:background">#333</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="About.TextView.LibraryUrl" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:autoLink">web</item>
        <item name="android:background">#333</item>
        <item name="android:textColorLink">#4080ff</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="About.TextView.LibraryNameNoUrl" parent="About.TextView.LibraryName">
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="About.TextView.LibraryLicense" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">#333</item>
        <item name="android:background">#f0f0f0</item>
    </style>
    <style name="VanillaBase" parent="Theme.AppCompat.Light">
        <item name="overlay_foreground_color">@color/overlay_foreground_light</item>
        <item name="tabs_background">#ff00bdf3</item>
        <item name="now_playing_marker">#ff00bdf3</item>
        <item name="controls_normal">@color/material_grey_600</item>
        <item name="controls_active">#ff00bdf3</item>
        <item name="android:dialogTheme">@style/PopupDialog</item>

    </style>

    <style name="Library_Light" parent="VanillaBase">
        <item name="android:windowBackground">@android:color/white</item>


        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>


    </style>
    <!-- dark theme -->
    <style name="Dark.VanillaBase" parent="Theme.AppCompat">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>

    <style name="Library_Dark" parent="Dark.VanillaBase">
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:colorBackground">@color/dark</item>



    </style>

    <style name="Library_PureDark" parent="Dark.VanillaBase">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>


    </style>

    <style name="Playback" parent="VanillaBase">
        <item name="android:actionBarStyle">@style/Universal.PlaybackActionBar</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="BackActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/Universal.PlaybackActionBar</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>

        <item name="android:textColorSecondaryInverse">@android:color/black</item>
    </style>

    <style name="Library" parent="VanillaBase">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PopupDialog" parent="Theme.AppCompat.Dialog" />


    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar" />

    <style name="NoActionBar_Light" parent="NoActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>

        <item name="android:textColorSecondaryInverse">@android:color/black</item>

        <item name="android:colorBackground">@android:color/white</item>

    </style>

    <style name="NoActionBar_Dark" parent="NoActionBar">


        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@android:color/white</item>

    </style>

    <style name="NoActionBar_PureDark" parent="NoActionBar">

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@android:color/white</item>

        <item name="android:colorBackground">@android:color/black</item>
    </style>


    <style name="Playback_Light" parent="Playback">


        <item name="android:textColorSecondary">@android:color/black</item>

        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="BackActionBar_Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/Universal.PlaybackActionBar</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>

        <item name="android:textColorSecondaryInverse">@android:color/black</item>

        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="PopupDialog_Light" parent="Theme.AppCompat.Dialog">

        <item name="android:windowBackground">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>

    </style>

    <style name="PopupDialog_Dark" parent="Theme.AppCompat.Dialog">
        <item name="controls_normal">@color/material_grey_600</item>
        <item name="controls_active">#ff3e677a</item>

    </style>

    <style name="PopupDialog_PureDark" parent="Theme.AppCompat.Dialog">
        <item name="controls_normal">@color/material_grey_600</item>
        <item name="controls_active">#ff3e677a</item>
        <item name="android:colorBackground">@color/black</item>

    </style>


    <style name="Playback_Dark" parent="Dark.VanillaBase">
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:colorBackground">@color/dark</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>

    <style name="Playback_PureDark" parent="Dark.VanillaBase">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>


    </style>

    <style name="BackActionBar_Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:actionBarStyle">@style/Universal.PlaybackActionBar</item>


        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@android:color/white</item>

    </style>


    <style name="BackActionBar_PureDark" parent="Dark.VanillaBase">

        <item name="android:actionBarStyle">@style/Universal.PlaybackActionBar</item>


        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@android:color/white</item>
        <item name="android:colorBackground">@android:color/black</item>


    </style>

    <style name="Dark.PopupDialog" parent="Theme.AppCompat.Dialog">
        <item name="controls_normal">@color/material_grey_600</item>
        <item name="controls_active">#ff3e677a</item>
    </style>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="FullPlayback"  parent="Playback" >
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!--For compatibility-->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
    <style name="FullPlayback_Light"  parent="Playback_Light" >
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!--For compatibility-->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
    <style name="FullPlayback_Dark"  parent="Playback_Dark" >
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!--For compatibility-->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="FullPlayback_PureDark"  parent="Playback_PureDark" >
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!--For compatibility-->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
    <color name="transparent_black">#73000000</color>
    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/transparent_black</item>
        <!--For compatibility-->
        <item name="background">@color/transparent_black</item>
    </style>

</resources>
